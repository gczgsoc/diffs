+			len = ur->ucr_actlen;
+		if (len != 0) {
+			/* if async, needs to happen in callback */
+			if (uio.uio_rw == UIO_READ) {
+				error = uiomovei(ptr, len, &uio);
+				// error = uiomovei(xfer->buffer, xfer->length, uio);
+				if (error)
+					goto ret;
+			}
+		}
+
+		info->callback(xfer, priv, s);
+	}
+
+ret:
+	if (ptr)
+		free(ptr, M_TEMP, 0);
+	usbd_free_xfer(xfer);
+	/* psignal */
+	return (error);
+}
